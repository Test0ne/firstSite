<%- layout('/layouts/boilerplate')%>
<%if (data && data.length > 0) {data = data[0]}%>

<div id="signup">
    <h1 class="justify-content-around text-center py-5">
        Sign up
    </h1>
    <form class="validate-form row border rounded p-4 text-left" action="/register" method="POST" novalidate>
        <div class="form-group col-12 pb-4">
            <label for="text" class="mb-2">Username</label>
            <input type="text" class="form-control" name="register[username]" id="text" placeholder="Username" value="<%= typeof data !== 'undefined' ? data.username : ''%>" required>
        </div>
        <div class="form-group col-12 pb-4">
            <label for="password" class="mb-2">Password</label>
            <input type="password" class="form-control" name="register[password]" id="password" placeholder="Password" value="<%= typeof data !== 'undefined' ? data.password : ''%>" required>
        </div>
        <div class="form-group col-12 pb-4">
            <label for="email" class="mb-2">Email</label>
            <input type="email" class="form-control" name="register[email]" id="email" placeholder="Email" value="<%= typeof data !== 'undefined' ? data.email : ''%>" required>
        </div>
        <div class="custom-control custom-checkbox m-auto p-auto pb-4">
            <input type="checkbox" class="custom-control-input" id="customCheck1" required>
            <label class="custom-control-label" for="customCheck1">I agree to the <a href="#">Terms of Service</a></label>
        </div>
        <div class="ml-0 mt-3 row form-group col-12 justify-content-center">
            <button class="btn btn-success align-self-end col-12 w-50">Create an account</button>
        </div>
    </form>
</div>
<nav class="col-12 my-4" aria-label="breadcrumb">
    <ol class="breadcrumb col-12 justify-content-center">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active"  aria-current="page">Sign up</li>
    </ol>
</nav>