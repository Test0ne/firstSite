<%- layout('/layouts/boilerplate')%>
<div id="signup">
    <h1 class="justify-content-around text-center py-5">
        <%try {%>
            <%= message !== null ? message : 'Sign in'%>
        <%} catch {%>
            Sign in
        <%}%>
    </h1>
    <form class="validate-form row border rounded p-4 text-left" action="/login" method="POST" novalidate>
        <div class="form-group col-12 pb-4">
            <label for="username" class="mb-2">Username</label>
            <input type="text" class="form-control" name="login[username]" id="username" placeholder="Username" required>
        </div>
        <div class="form-group col-12 pb-4">
            <label for="password" class="mb-2">Password</label>
            <input type="password" class="form-control" name="login[password]" id="password" placeholder="Password" required>
        </div>
        <div class="custom-control custom-checkbox m-auto p-auto pb-4">
            <input type="checkbox" class="custom-control-input" id="customCheck1">
            <label class="custom-control-label" for="customCheck1" required>Remember me</label>
        </div>
        <div class="ml-0 mt-3 row form-group col-12 justify-content-center">
            <button class="btn btn-success align-self-end col-12 w-50">Sign in</button>
        </div>
    </form>
</div>
<nav class="col-12 my-4" aria-label="breadcrumb">
    <ol class="breadcrumb col-12 justify-content-center">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active"  aria-current="page">Sign in</li>
    </ol>
</nav>