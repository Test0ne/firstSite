<%- layout('/layouts/boilerplate')%>
<%var {_id: id,name,description,rating,ratings,price,stock,comments,image = "/img/product.png"} = response;%>

<div class="mcontent col-md-10 col-lg-10 col-xl-10 text-center bg-white row justify-content-center align-content-center m-0">
    <div class="col-md-12 col-lg-11 col-xl-10 mt-3">
        
        <h2 class="col-12 mb-3">Edit product <small class="text-dark"><%=name%></small></h2>


        <form class="row justify-content-center" action="/store/<%=id%>/edit?_method=PUT" method="POST">
            <div class="border rounded col-12 m-1 p-1 py-4">
                <label class="col-6 font-weight-bold" for="name">Product Name</label>
                <textarea class="col-md-6 col-sm-12 text-center" type="text" name="name" id="name" placeholder="product name"><%=name%></textarea>
                <hr class="w-md-50 w-sm-100">
                <label class="col-md-3 col-sm-5 font-weight-bold" for="price">Price</label>
                <input class="col-md-3 col-sm-5 text-center" type="number" id="price" name="price" placeholder="0" value="<%= price %>">
                <hr class="w-md-50 w-sm-100">
                <label class="col-md-3 col-sm-5 font-weight-bold" for="stock">Stock</label>
                <input class="col-md-3 col-sm-5 text-center" type="number" id="stock" name="stock" placeholder="0" value="<%= stock %>">
                <hr class="w-md-50 w-sm-100">
                <label class="col-md-3 col-sm-5 font-weight-bold" for="image">Image</label>
                <input class="col-md-3 col-sm-5 text-center" type="text" id="image" name="image" placeholder="0" value="<%= image %>">
                <label class="col-12" for="description">Description</label>
                <textarea class="col-md-10 col-sm-12 text-center" name="description" id="description" cols="30" rows="10" class="col-12 text-center"><%=description%></textarea>
            </div>
            <button class="col-6 mb-2 btn btn-primary my-2">Edit product</button>
            <label class="col-12" for="name"><h3>Database Info</h3></label>
            <div class="border rounded col-12 m-1 p-1 py-4">
                <label class="col-3" for="id">ID</label>
                <input class="col-8 text-center" type="text" id="id" name="id" value="<%=id%>" disabled>
                <label class="col-3" for="rating">Rating</label>
                <input class="col-8 text-center" type="number" id="rating" name="rating" placeholder="0" value="<%= rating %>" disabled>
                <label class="col-3" for="ratings">Ratings</label>
                <input class="col-8 text-center" type="number" id="ratings" name="ratings" placeholder="0" value="<%= ratings %>" disabled>
            </div>
        </form>
        <form class="row justify-content-center" action="/store/<%=id%>/edit?_method=DELETE" method="POST">
            <button class="col-6 my-2 btn btn-danger">Delete product</button>
        </form>
    </div>
    <nav class="col-12" aria-label="breadcrumb">
        <ol class="breadcrumb col-12 justify-content-center">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
            <li class="breadcrumb-item"><a href="/store">Store</a></li>
            <li class="breadcrumb-item active"  aria-current="page">Edit product (<%=name%>)</li>
        </ol>
    </nav>
</div>